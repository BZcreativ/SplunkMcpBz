# Splunk MCP Server Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SECURITY SETTINGS (REQUIRED)
# =============================================================================

# Secret key for JWT tokens - MUST be changed in production!
# Generate a strong key: openssl rand -hex 32
SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# User passwords - NEVER use these defaults in production!
ADMIN_PASSWORD=your-secure-admin-password-here
USER_PASSWORD=your-secure-user-password-here
READONLY_PASSWORD=your-secure-readonly-password-here

# Optional: Custom usernames (defaults shown)
# ADMIN_USERNAME=admin
# USER_USERNAME=user
# READONLY_USERNAME=readonly

# =============================================================================
# SPLUNK CONNECTION SETTINGS (REQUIRED)
# =============================================================================

# Splunk connection method 1: Token (recommended)
SPLUNK_TOKEN=your-splunk-hec-token-here

# Splunk connection method 2: Username/Password (alternative)
# SPLUNK_USERNAME=admin
# SPLUNK_PASSWORD=your-splunk-password

# Splunk server settings
SPLUNK_HOST=localhost
SPLUNK_PORT=8089
SPLUNK_SCHEME=https

# Connection settings
SPLUNK_MAX_RETRIES=3
SPLUNK_TIMEOUT=30

# =============================================================================
# REDIS SETTINGS (OPTIONAL)
# =============================================================================

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your-redis-password

# Cache TTL settings (in seconds)
REDIS_QUERY_CACHE_TTL=300
REDIS_ITSI_CACHE_TTL=60
REDIS_SESSION_CACHE_TTL=3600

# Redis connection pool
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# SERVER SETTINGS (OPTIONAL)
# =============================================================================

# Server binding
HOST=0.0.0.0
PORT=8334

# Logging
LOG_LEVEL=INFO
DEBUG=false

# MCP Server settings
MCP_SERVER_NAME=SplunkMCP
MCP_VERSION=1.0.0

# =============================================================================
# SECURITY SETTINGS (OPTIONAL)
# =============================================================================

# Token settings
TOKEN_EXPIRY_HOURS=24
MAX_REQUESTS_PER_MINUTE=100

# CORS settings
ALLOWED_ORIGINS=*

# SSL settings (for production)
# SSL_KEYFILE=/path/to/ssl.key
# SSL_CERTFILE=/path/to/ssl.crt

# SSL verification
VERIFY_SSL=false

# =============================================================================
# MONITORING SETTINGS (OPTIONAL)
# =============================================================================

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# DEVELOPMENT SETTINGS (DO NOT USE IN PRODUCTION)
# =============================================================================

# Development overrides
# DEBUG=true
# LOG_LEVEL=DEBUG
# VERIFY_SSL=false
